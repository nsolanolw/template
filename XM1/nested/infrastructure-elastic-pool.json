{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables": {
  },
  "parameters": {
    "prefix": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "sqlServerName": {
      "type": "string",
      "defaultValue": "[concat(parameters('prefix'), '-sql')]"
    },
    "coreSqlDatabaseName": {
      "type": "string",
      "defaultValue": "[concat(parameters('prefix'), '-core-db')]"
    },
    "masterSqlDatabaseName": {
      "type": "string",
      "defaultValue": "[concat(parameters('prefix'), '-master-db')]"
    },
    "webSqlDatabaseName": {
      "type": "string",
      "defaultValue": "[concat(parameters('prefix'), '-web-db')]"
    },
    "formsSqlDatabaseName": {
      "type": "string",
      "defaultValue": "[concat(parameters('prefix'), '-forms-db')]"
    },
    "sessionsSqlDatabaseName":{
      "type": "string",
      "defaultValue": "[concat(parameters('prefix'), '-sessions-db')]"
    },
    
    "elasticPoolName": {
      "type": "string",
      "metadata": {
        "description": "The Elastic Pool name."
      },
      "defaultValue": "[concat(parameters('prefix'), '-ep')]"
    },
    "databasesNames": {
      "type": "array",
      "defaultValue": [
        "[parameters('coreSqlDatabaseName')]",
        "[parameters('masterSqlDatabaseName')]",
        "[parameters('webSqlDatabaseName')]",
        "[parameters('formsSqlDatabaseName')]",
        "[parameters('sessionsSqlDatabaseName')]"
      ]
    },
    "databaseCollation": {
      "type": "string",
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS",
      "metadata": {
        "description": "The SQL Database collation."
      }
    } 
  },
  "resources": [

    {
      "copy": {
        "name": "addDatabasesInElasticPool",
        "count": "[length(parameters('databasesNames'))]"
      },
      "type": "Microsoft.Sql/servers/databases",
      "name": "[concat(parameters('sqlServerName'), '/', parameters('databasesNames')[copyIndex()])]",
      "location": "[parameters('location')]",
      "apiVersion": "2014-04-01-preview",
      "properties": {
        "collation": "[parameters('databaseCollation')]",
        "requestedServiceObjectiveName": "ElasticPool",
        "elasticPoolName": "[parameters('elasticPoolName')]"
      }      
    }
    
  ]
  
}
