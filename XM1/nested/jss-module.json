{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "standard": {
            "defaultValue": {
                "infrastructure": {
                    "sqlServerFqdn": null,
                    "authCertificateThumbprint": null
                },
                "prefix": null,
                "location": null,
                "sqlServerLogin": null,
                "sqlServerPassword": null,
                "coreSqlDatabaseName": null,
                "masterSqlDatabaseName": null,
                "cdWebAppName": null,
                "cmWebAppName": null
            },
            "type": "SecureObject"
        },
        "extension": {
            "defaultValue": {
                "jssMsDeployPackageUrl": null,
                "jssCDMsDeployPackageUrl": null
            },
            "type": "SecureObject"
        },
        "prefix": {
            "defaultValue": "[coalesce(parameters('standard').prefix, resourceGroup().name)]",
            "type": "String"
        },
        "location": {
            "defaultValue": "[coalesce(parameters('standard').location, resourceGroup().location)]",
            "minLength": 1,
            "type": "String"
        },
        "sqlServerFqdn": {
            "defaultValue": "[coalesce(parameters('standard').infrastructure.sqlServerFqdn, concat(parameters('prefix'), '-sql.database.windows.net'))]",
            "minLength": 1,
            "type": "String"
        },
        "sqlServerLogin": {
            "defaultValue": "[parameters('standard').sqlServerLogin]",
            "minLength": 1,
            "type": "String"
        },
        "sqlServerPassword": {
            "defaultValue": "[parameters('standard').sqlServerPassword]",
            "minLength": 8,
            "type": "SecureString"
        },
        "coreSqlDatabaseName": {
            "defaultValue": "[coalesce(parameters('standard').coreSqlDatabaseName, concat(parameters('prefix'), '-core-db'))]",
            "minLength": 1,
            "type": "String"
        },
        "masterSqlDatabaseName": {
            "defaultValue": "[coalesce(parameters('standard').masterSqlDatabaseName, concat(parameters('prefix'), '-master-db'))]",
            "minLength": 1,
            "type": "String"
        },
        "webApps": {
            "type": "Array"
        },
        "cdWebApps": {
            "type": "Array"
        },
        "cmWebAppName": {
            "defaultValue": "[coalesce(parameters('standard').cmWebAppName, concat(parameters('prefix'), '-cm'))]",
            "minLength": 1,
            "type": "String"
        },
        "jssMsDeployPackageUrl": {
            "defaultValue": "[parameters('extension').jssMsDeployPackageUrl]",
            "minLength": 1,
            "type": "SecureString"
        },
        "jssCDMsDeployPackageUrl": {
            "defaultValue": "[parameters('extension').jssCDMsDeployPackageUrl]",
            "minLength": 1,
            "type": "SecureString"
        }
    },
    "variables": {
        "webApiVersion": "2016-08-01",
        "sqlServerFqdnTidy": "[toLower(trim(parameters('sqlServerFqdn')))]",
        "coreSqlDatabaseNameTidy": "[toLower(trim(parameters('coreSqlDatabaseName')))]",
        "masterSqlDatabaseNameTidy": "[toLower(trim(parameters('masterSqlDatabaseName')))]",
        "cmWebAppNameTidy": "[toLower(trim(parameters('cmWebAppName')))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites/extensions",
            "apiVersion": "[variables('webApiVersion')]",
            "name": "[concat(variables('cmWebAppNameTidy'), '/', 'MSDeploy')]",
            "location": "[parameters('location')]",
            "properties": {
                "addOnPackages": [
                    {
                        "packageUri": "[parameters('jssMsDeployPackageUrl')]",
                        "dbType": "SQL",
                        "connectionString": "[concat('Data Source=tcp:', variables('sqlServerFqdnTidy'), ',1433;Initial Catalog=master;User Id=', parameters('sqlServerLogin'), ';Password=', parameters('sqlServerPassword'), ';')]",
                        "setParameters": {
                            "Application Path": "[variables('cmWebAppNameTidy')]",
                            "Core Admin Connection String": "[concat('Encrypt=True;TrustServerCertificate=False;Data Source=', variables('sqlServerFqdnTidy'), ',1433;Initial Catalog=',variables('coreSqlDatabaseNameTidy'),';User Id=', parameters('sqlServerLogin'), ';Password=', parameters('sqlServerPassword'), ';')]",
                            "Master Admin Connection String": "[concat('Encrypt=True;TrustServerCertificate=False;Data Source=', variables('sqlServerFqdnTidy'), ',1433;Initial Catalog=',variables('masterSqlDatabaseNameTidy'),';User Id=', parameters('sqlServerLogin'), ';Password=', parameters('sqlServerPassword'), ';')]"
                        }
                    }
                ]
            }
        },
        {
            "copy": {
                "name": "cdMSDeployCopy",
                "count": "[length(parameters('cdWebApps'))]"
            },
            "type": "Microsoft.Web/sites/extensions",
            "apiVersion": "[variables('webApiVersion')]",
            "name": "[concat(parameters('cdWebApps')[copyIndex()].name, '/', 'MSDeploy')]",
            "location": "[parameters('location')]",
            "properties": {
                "addOnPackages": [
                    {
                        "packageUri": "[parameters('jssCDMsDeployPackageUrl')]",
                        "setParameters": {
                            "Application Path": "[parameters('cdWebApps')[copyIndex()].name]"
                        }
                    }
                ]
            }
        }
    ]
}