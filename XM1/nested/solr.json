{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables":{
    "webApiVersion": "2019-08-01"
  },
  "parameters": {
    "solrHostingPlanName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "solrWebAppName": {
      "type": "string"
    },
    "solrVersion": {
      "type": "string",
      "defaultValue": "7.5.0",
      "allowedValues": [
        "6.6.1",
        "6.6.2",
        "6.6.3",
        "7.2.1",
        "7.5.0",
        "8.1.1"
      ]
    },
    "solrHostingPlanSkuName": {
      "defaultValue": "S1",
      "allowedValues": [
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "type": "string"
    },
    "httpsOnly": {
      "type": "bool",
      "defaultValue": true
    },
    "solrMsDeployPackageUrl": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2019-08-01",
      "name": "[parameters('solrHostingPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('solrHostingPlanSkuName')]"
      },
      "properties": {
        "name": "[parameters('solrHostingPlanName')]"
      }
    },
    {
      "apiVersion": "2019-08-01",
      "name": "[parameters('solrWebAppName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('solrHostingPlanName'))]"
      ],
      "properties": {
        "name": "[parameters('solrWebAppName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('solrHostingPlanName'))]",
        "clientAffinityEnabled": false,
        "siteConfig": {
          "appSettings": [
            {
              "name": "solrVersion",
              "value": "[parameters('solrVersion')]"
            }
          ]
        },
        "httpsOnly": "[parameters('httpsOnly')]"
      },
      "resources": [
        {
          "name": "web",
          "type": "config",
          "apiVersion": "2019-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('solrWebAppName'))]"
          ],
          "properties": {
            "alwaysOn": true,
            "javaVersion": "1.8",
            "javaContainer": "TOMCAT",
            "javaContainerVersion": "9.0"
          }
        },
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[parameters('location')]",
          "apiVersion": "2019-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('solrWebAppName'))]",
            "[concat('Microsoft.Web/sites/', parameters('solrWebAppName'), '/config/web')]"
          ],
          "properties": {
            "packageUri": "[parameters('solrMsDeployPackageUrl')]",
            "dbType": "None",
            "connectionString": "",
            "setParameters": {
            }
          }
        }
      ]
    }
  ],
  "outputs": {
    "infrastructure": {
      "type": "object",
      "value": {
        "solrWebAppHostName": "[reference(concat('Microsoft.Web/sites/', parameters('solrWebAppName')), variables('webApiVersion')).defaultHostName]"        
      }
    }
  }
}