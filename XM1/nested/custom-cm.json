{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String"
        },
        "sqlServerFqdn": {
            "type": "String"
        },
        "sqlServerLogin": {
            "type": "String"
        },
        "sqlServerPassword": {
            "type": "String"
        },
        "masterSqlDatabaseName": {
            "type": "String"
        },
        "cdWebApps": {
            "type": "Array"
        },
        "cmWebAppName": {
            "type": "String"
        },
        "rootDeployPackageUrl": {
            "type": "String"
        }
    },
    "variables": {
        "webApiVersion": "2016-08-01",
        "sqlServerFqdnTidy": "[toLower(trim(parameters('sqlServerFqdn')))]",
        "masterSqlDatabaseNameTidy": "[toLower(trim(parameters('masterSqlDatabaseName')))]",
        "cmWebAppNameTidy": "[toLower(trim(parameters('cmWebAppName')))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites/extensions",
            "apiVersion": "[variables('webApiVersion')]",
            "name": "[concat(variables('cmWebAppNameTidy'), '/', 'MSDeploy')]",
            "location": "[parameters('location')]",
            "properties": {
                "addOnPackages": [
                    {
                        "packageUri": "[concat(parameters('rootDeployPackageUrl'),'CM.scwdp.zip')]",
                        "dbType": "SQL",
                        "connectionString": "[concat('Data Source=tcp:', variables('sqlServerFqdnTidy'), ',1433;Initial Catalog=master;User Id=', parameters('sqlServerLogin'), ';Password=', parameters('sqlServerPassword'), ';')]",
                        "setParameters": {
                            "Master Admin Connection String": "[concat('Encrypt=True;TrustServerCertificate=False;Data Source=', variables('sqlServerFqdnTidy'), ',1433;Initial Catalog=',variables('masterSqlDatabaseNameTidy'),';User Id=', parameters('sqlServerLogin'), ';Password=', parameters('sqlServerPassword'), ';')]",
                            "Number of Content Delivery": "[length(parameters('cdWebApps'))]"
                        }
                    }
                ]
            }
        }
    ]
}